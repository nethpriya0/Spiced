# Spice Platform Production Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================
# BLOCKCHAIN CONFIGURATION
# =============================================

# Sepolia Testnet Configuration
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_RPC_URL="https://sepolia.infura.io/v3/YOUR_INFURA_KEY"

# Get your Infura key at: https://app.infura.io/
# Alternative: Use Alchemy - https://dashboard.alchemy.com/
# NEXT_PUBLIC_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY"

# Deployment wallet private key (NEVER share this!)
# Create a new wallet for deployment with some test ETH
# Get test ETH from: https://sepoliafaucet.com/
PRIVATE_KEY="0xYOUR_DEPLOYMENT_PRIVATE_KEY"

# Etherscan API key for contract verification
# Get free key at: https://etherscan.io/apis
ETHERSCAN_API_KEY="YOUR_ETHERSCAN_API_KEY"

# =============================================
# WEB3AUTH CONFIGURATION
# =============================================

# Get your Web3Auth client ID at: https://dashboard.web3auth.io/
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID="YOUR_WEB3AUTH_CLIENT_ID"

# =============================================
# IPFS CONFIGURATION (PINATA)
# =============================================

# Get Pinata keys at: https://app.pinata.cloud/keys
NEXT_PUBLIC_IPFS_GATEWAY="https://gateway.pinata.cloud/ipfs/"
PINATA_API_KEY="YOUR_PINATA_API_KEY" 
PINATA_SECRET_API_KEY="YOUR_PINATA_SECRET_API_KEY"

# =============================================
# APPLICATION CONFIGURATION
# =============================================

# Your application URL (update for production)
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"

# Smart contract addresses (will be filled after deployment)
NEXT_PUBLIC_DIAMOND_PROXY_ADDRESS="0x..."
NEXT_PUBLIC_FARMER_REGISTRY_ADDRESS="0x..."
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS="0x..."

# =============================================
# DEVELOPMENT CONFIGURATION
# =============================================

NODE_ENV="production"
REPORT_GAS=true
SKIP_ENV_VALIDATION=false